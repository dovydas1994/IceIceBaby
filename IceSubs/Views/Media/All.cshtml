@model IEnumerable<Medium>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@section CustomHeader{

    <h1>@ViewBag.Title</h1>
}


<table class="result">
    <thead>
    <tr>
        <td>Title</td>
        <td>User</td>
        <td>Rating</td>
        <td>Popularity</td>
        <td>Language</td>
    </tr>
    </thead>

    @foreach (var item in Model)
    {
    <tr>
        <td>@Html.ActionLink(item.Title, "Detail" , new { MediaID = item.MediaID }) </td>
        <td>@item.IceUser.Username</td>
        @switch (item.Translation.RatingsID)
        {
            case 1: 
                <td><img src="~/gfx/rating1.png" alt="Rating"> </td> 
                break;
            case 2: 
                <td><img src="~/gfx/rating2.png" alt="Rating"> </td> 
                break;
            case 3: 
                <td><img src="~/gfx/rating3.png" alt="Rating"> </td> 
                break;
            case 4: 
                <td><img src="~/gfx/rating4.png" alt="Rating"> </td> 
                break;
            case 5: 
                <td><img src="~/gfx/rating5.png" alt="Rating"> </td> 
                break;

            default:
                <td><img src="~/gfx/rating0.png" alt="Rating"> </td> 
                break;
        }
                
        <td>@item.Translation.Downloads</td>
        <td>
            <a href="#"><img src="~/gfx/flag_is.png" alt="Download Icelandic translation"></a>&nbsp;
            <a href="#"><img src="~/gfx/flag_uk.png" alt="Download Icelandic translation"></a>
        </td>
    </tr>
    }

    

</table>

